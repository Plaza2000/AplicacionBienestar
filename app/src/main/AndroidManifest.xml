<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiseñoAplicacionBienestar"
        tools:targetApi="31">

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Meditación guiada -->
        <activity
            android:name=".MeditacionGuiadaActivity"
            android:exported="true" />

        <!-- Temporizador de meditación -->
        <activity
            android:name=".TemporizadorActivity"
            android:exported="true" />

        <!-- Registro de usuario -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />

        <!-- Menú principal -->
        <activity
            android:name=".MenuActivity"
            android:exported="true"/>

        <!-- Calculadora del sueño -->
        <activity
            android:name=".CalculadoraSueno"
            android:exported="true" />

        <!-- Mood Tracker -->
        <activity
            android:name=".MoodTracker"
            android:exported="true" />

        <!-- Historial de estados de ánimo -->


    </application>

</manifest>
