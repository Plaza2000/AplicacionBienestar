<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Título y Tipo de Meditación -->
    <TextView
        android:id="@+id/textTipoMeditacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meditación: Relajación"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"/>

    <!-- Duración de la Meditación -->
    <TextView
        android:id="@+id/textDuracionMeditacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duración: 5 min"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:textColor="#000000"/>

    <!-- Temporizador -->
    <TextView
        android:id="@+id/textTemporizador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="48sp"
        android:textColor="#000000"
        android:layout_marginBottom="32dp"/>

    <!-- Botón Pausar -->
    <Button
        android:id="@+id/btnPausar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pausar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4A90E2"
        android:layout_marginBottom="24dp"/>

    <!-- Botón Reanudar -->
    <Button
        android:id="@+id/btnReanudar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reanudar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4A90E2"
        android:visibility="gone"
        android:layout_marginBottom="24dp"/>

    <!-- Botón Terminar -->
    <Button
        android:id="@+id/btnTerminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E24A4A"
        android:visibility="gone"
        android:layout_marginBottom="24dp"/>


</LinearLayout>
